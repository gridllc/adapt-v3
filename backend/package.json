{
  "name": "adapt-backend",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:port": "BACKEND_PORT=8001 tsx watch src/server.ts",
    "dev:next": "BACKEND_PORT=8001 tsx watch src/server.ts || BACKEND_PORT=8002 tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "test-db": "node test-db-connection.js",
    "migrate": "node migrate-db.js",
    "db:push": "npx prisma db push",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "postinstall": "npx prisma generate",
    "migrate:deploy": "prisma migrate deploy",
    "render:start": "npm run migrate:deploy || echo 'Migration failed, continuing...' && npm run start",
    "check-ports": "echo 'Checking port usage...' && (netstat -ano | findstr :8000 >nul 2>&1 && echo '8000: BUSY' || echo '8000: FREE') && (netstat -ano | findstr :5173 >nul 2>&1 && echo '5173: BUSY' || echo '5173: FREE')"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.864.0",
    "@aws-sdk/s3-request-presigner": "^3.864.0",
    "@clerk/clerk-sdk-node": "^4.12.0",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@google-cloud/speech": "^7.2.0",
    "@google-cloud/text-to-speech": "^6.0.0",
    "@google/generative-ai": "^0.1.3",
    "@prisma/client": "^6.13.0",
    "@upstash/qstash": "^0.3.0",
    "axios": "^1.3.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "form-data": "^4.0.4",
    "helmet": "^7.0.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "openai": "^4.0.0",
    "pg": "^8.16.3",
    "qrcode.react": "^4.2.0",
    "react-dropzone": "^14.3.8",
    "sharp": "^0.32.0",
    "uuid": "^9.0.1",
    "whisper-node": "^0.1.5",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/multer": "^1.4.13",
    "@types/node": "^18.15.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.38.0",
    "prisma": "^6.13.0",
    "ts-node": "^10.9.2",
    "tsx": "^3.12.7",
    "typescript": "^5.9.2",
    "vitest": "^0.29.3"
  },
  "overrides": {
    "@types/express": "^4.17.23"
  }
}
