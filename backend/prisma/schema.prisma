generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Module {
  id        String         @id
  title     String
  filename  String
  videoUrl  String         @map("video_url")
  progress  Int            @default(0)
  userId    String?        @map("user_id")
  createdAt DateTime       @default(now()) @map("created_at")
  updatedAt DateTime       @map("updated_at")
  lastError String?        @map("last_error")
  s3Key     String?        @map("s3_key")
  statuses  ModuleStatus[]
  stepsKey  String?        @map("steps_key")
  status    ModuleStatus   @default(UPLOADED) @map("status")
  feedbacks Feedback[]
  users     User?          @relation(fields: [userId], references: [id])
  questions Question[]
  steps     Step[]

  @@map("modules")
}

model Step {
  id             String     @id @default(cuid())
  moduleId       String     @map("module_id")
  order          Int
  createdAt      DateTime   @default(now()) @map("created_at")
  aiConfidence   Float?     @map("ai_confidence")
  confusionScore Float?     @map("confusion_score")
  text           String
  startTime      Int        @map("start_time")
  endTime        Int        @map("end_time")
  updatedAt      DateTime   @map("updated_at")
  questions      Question[]
  module         Module     @relation(fields: [moduleId], references: [id], onDelete: Cascade)

  @@map("steps")
}

model Question {
  id             String          @id @default(cuid())
  moduleId       String          @map("module_id")
  stepId         String?         @map("step_id")
  question       String
  answer         String
  videoTime      Float?          @map("video_time")
  isFAQ          Boolean         @default(false) @map("is_faq")
  userId         String?         @map("user_id")
  createdAt      DateTime        @default(now()) @map("created_at")
  lastUsedAt     DateTime?       @map("last_used_at")
  reuseCount     Int             @default(0) @map("reuse_count")
  questionVector QuestionVector?
  modules        Module          @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  step           Step?           @relation(fields: [stepId], references: [id], onDelete: SetNull, map: "fk_questions_step_id")
  users          User?           @relation(fields: [userId], references: [id])

  @@index([reuseCount])
  @@map("questions")
}

model QuestionVector {
  id         String   @id @default(uuid())
  questionId String   @unique @map("question_id")
  embedding  Float[]
  createdAt  DateTime @default(now()) @map("created_at")
  modelName  String?  @default("openai-embedding-3-small") @map("model_name")
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@map("question_vectors")
}

model User {
  id            String        @id @default(cuid())
  email         String        @unique
  clerkId       String?       @unique @map("clerk_id")
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @map("updated_at")
  activity_logs ActivityLog[]
  modules       Module[]
  questions     Question[]

  @@map("users")
}

model Feedback {
  id        String   @id @default(cuid())
  moduleId  String   @map("module_id")
  type      String
  action    String
  context   String?
  sessionId String?  @map("session_id")
  createdAt DateTime @default(now()) @map("created_at")
  module    Module   @relation(fields: [moduleId], references: [id], onDelete: Cascade)

  @@map("feedbacks")
}

model AIInteraction {
  id          String   @id @default(cuid())
  moduleId    String   @map("module_id")
  userMessage String   @map("user_message")
  aiResponse  String   @map("ai_response")
  source      String?
  context     Json?
  createdAt   DateTime @default(now()) @map("created_at")
  sourceModel String?  @map("source_model")
  usedMemory  Boolean  @default(false) @map("used_memory")

  @@map("ai_interactions")
}

model TrainingSession {
  id        String    @id @default(cuid())
  moduleId  String    @map("module_id")
  userId    String?   @map("user_id")
  sessionId String    @map("session_id")
  startedAt DateTime  @default(now()) @map("started_at")
  endedAt   DateTime? @map("ended_at")
  duration  Int?

  @@map("training_sessions")
}

model ActivityLog {
  id        String   @id @default(cuid())
  userId    String?  @map("user_id")
  action    String
  targetId  String?  @map("target_id")
  metadata  Json?
  createdAt DateTime @default(now()) @map("created_at")
  users     User?    @relation(fields: [userId], references: [id])

  @@map("activity_logs")
}

enum ModuleStatus {
  UPLOADED
  PROCESSING
  READY
  FAILED
}
