# Core Configuration
NODE_ENV=development
PORT=10000

# Database (Required)
DATABASE_URL=postgresql://username:password@localhost:5432/adapt_v3

# AWS S3 (Required for file storage)
AWS_BUCKET_NAME=your-s3-bucket-name
AWS_REGION=us-west-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# QStash Queue Configuration (Optional - for async job processing)
QSTASH_ENABLED=false
USE_QSTASH=false
QSTASH_URL=https://qstash.upstash.io/v2/publish
QSTASH_TOKEN=your-qstash-token
BACKEND_ORIGIN=https://your-backend-url.com
QSTASH_CURRENT_SIGNING_KEY=your-signing-key
QSTASH_NEXT_SIGNING_KEY=your-next-signing-key

# AI Services (At least one required)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL_STEPS=gpt-4o-mini
AI_TEMPERATURE=0.2
AI_MAX_OUTPUT_TOKENS=800
ENABLE_GEMINI=false
GEMINI_API_KEY=your-gemini-api-key
MAX_TRANSCRIPT_CHARS=10000
MAX_TRANSCRIBE_MB=60

# AssemblyAI (Required for transcription)
ASSEMBLYAI_API_KEY=your-assemblyai-api-key
ASSEMBLYAI_WEBHOOK_SECRET=your-webhook-secret
API_BASE_URL=https://your-backend-url.com

# Google Services (Optional)
GOOGLE_CLIENT_EMAIL=your-google-client-email
GOOGLE_PRIVATE_KEY=your-google-private-key
GOOGLE_PROJECT_ID=your-google-project-id

# Authentication (Required)
CLERK_SECRET_KEY=your-clerk-secret-key
FRONTEND_URL=http://localhost:3000

# Upload Configuration
MAX_FILE_SIZE=104857600
ALLOWED_VIDEO_TYPES=video/mp4,video/mov,video/webm,video/avi,video/wmv,video/flv
UPLOAD_TIMEOUT=300000
ENABLE_FILE_COMPRESSION=true

# Optional
LOG_LEVEL=info 