{
  "name": "adapt-frontend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:port": "FRONTEND_PORT=5174 vite",
    "dev:next": "vite --port 5174 || vite --port 5175 || vite --port 5176",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:e2e": "playwright test",
    "check-ports": "echo 'Checking port usage...' && (netstat -ano | findstr :5173 >nul 2>&1 && echo '5173: BUSY' || echo '5173: FREE') && (netstat -ano | findstr :8000 >nul 2>&1 && echo '8000: BUSY' || echo '8000: FREE')",
    "kill-5173": "for /f \"tokens=5\" %a in ('netstat -ano ^| findstr :5173') do taskkill /PID %a /F 2>nul",
    "dev:clean": "npm run kill-5173 && timeout /t 2 >nul && npm run dev"
  },
  "dependencies": {
    "@clerk/clerk-react": "^4.32.5",
    "axios": "^1.3.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^1.2.0",
    "lucide-react": "^0.263.0",
    "qrcode.react": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.3.8",
    "react-router-dom": "^6.8.0",
    "tailwind-merge": "^1.13.0",
    "zustand": "^4.3.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.32.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.3",
    "vite": "^4.1.0",
    "vitest": "^0.29.3"
  }
}
